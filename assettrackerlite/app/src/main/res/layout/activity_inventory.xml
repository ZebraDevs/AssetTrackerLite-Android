<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_inventory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.symbol.assettrackerlite.InventoryActivity"
    android:background="#2d2d2d">

    <!-- Header -->
    <LinearLayout style="@style/TitleBar">

        <ImageView
            style="@style/TitleIcon"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="12dp"
            android:onClick="onBackButton"
            />

        <TextView
            style="@style/Title"
            android:text="Inventory"
            android:layout_marginRight="36dp"
            />

    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:text="@string/assetinformation_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0077a0"
        android:textColor="#f5f5f5"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:background="@drawable/border">
        <TextView
            android:text="@string/barcode_string"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:textColor="#0077a0"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"/>
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:textColor="#000"
            android:id="@+id/itemBarcode"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:text="@string/value_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0077a0"
                    android:textSize="12dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>
                <TextView
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/itemValue"
                    android:textSize="16dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/borderwithleft"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:text="@string/units_string"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="12dp"
                    android:textColor="#0077a0"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    />
                <EditText
                    android:text=""
                    android:inputType="number|numberSigned"
                    android:layout_margin="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#0077a0"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textCursorDrawable="@null"
                    android:id="@+id/itemUnits"
                    android:padding="5dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="@string/description_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingTop="5dp"
                android:background="#f5f5f5"
                android:textColor="#0077a0"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:textColor="#000"
                android:id="@+id/itemDescription"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:padding="5dp"
        android:layout_marginTop="6dp"
        android:text="@string/scannedassets_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0077a0"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="#f5f5f5"/>

    <ListView
        android:layout_height="0dp"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#f5f5f5">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/topborder"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="@string/totalvalue_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#0077a0"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <TextView
                android:text="0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/totalValue"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/topborderwithleft"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:text="@string/totalunits_string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#0077a0"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />
            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:id="@+id/totalUnits"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="#0077a0"
        android:gravity="center_vertical|center_horizontal"
        android:padding="10dp"
        android:text="@string/stop_string"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp" />


</LinearLayout>
